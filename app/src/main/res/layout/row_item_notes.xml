<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_6sdp"
    android:layout_margin="@dimen/_6sdp"
    android:background="@drawable/rounded_bg"
    android:elevation="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/note_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/_7sdp"
        android:src="@drawable/imageview" />

    <TextView
        android:id="@+id/note_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/note_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/note_image"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:maxLines="1"
        android:text="@string/star_hints"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/note_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/note_title"
        app:layout_constraintStart_toStartOf="@+id/note_title"
        app:layout_constraintEnd_toEndOf="@id/note_title"
        app:layout_constraintBottom_toBottomOf="@+id/note_image"
        android:layout_marginTop="8dp"
        android:text="@string/star_hints"
        android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>