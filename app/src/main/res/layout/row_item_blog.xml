<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:padding="10dp"
    android:background="@drawable/back_img_library">

 <TextView
     android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:text="AFCAT 2 Exam Analysis 28 August 2022 Shift 2-check Topic Wise Difficulty Level Here!"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="AFCAT Syllabus 2023: Get latest PDF for Exam Pattern and Syllabus for AFCAT 2023 exam. This AFCAT Syllabus will help you to prepare for AFCAT 2023 Exam."
        android:textSize="12sp"
        android:textColor="@color/light_gray"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        />

  <View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/light_gray"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="15dp"
    app:layout_constraintTop_toBottomOf="@id/detail"
    />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28 aug.2022"
        android:textColor="@color/light_gray"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textColor="@color/light_gray"
        android:textSize="12sp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_baseline_share_24"
        android:drawableTint="@color/light_gray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@color/light_gray"
        android:textSize="12sp"
        android:layout_marginEnd="30dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/saved"
        android:drawableTint="@color/light_gray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>