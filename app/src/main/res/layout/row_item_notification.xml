<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/logoParent"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_17sdp"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:contentDescription="@null"
            android:id="@+id/logo"
            android:src="@drawable/ic_notification"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="14/09/22 6:04 AM"
        android:paddingHorizontal="@dimen/_10sdp"
        app:layout_constraintStart_toEndOf="@+id/logoParent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/open_sans"
        app:layout_constraintTop_toTopOf="@id/logoParent"
        app:layout_constraintBottom_toBottomOf="@+id/logoParent"
        android:id="@+id/dateTime"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_70sdp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Welcome to the Tata Pay alerts zone"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:id="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/logoParent"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get updates about your Tata Pay transactions right here"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="@dimen/_7sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/_70sdp"
        android:fontFamily="@font/open_sans"
        android:textSize="@dimen/_11sdp"
        android:id="@+id/content" />

</androidx.constraintlayout.widget.ConstraintLayout>